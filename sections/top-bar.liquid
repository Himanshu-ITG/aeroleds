<style>
.topbar {
    width: 100%;
    display: flex;
    gap: 20px;
}
.logo-align-right {
    justify-content: right;
}
.logo-align-left {
    justify-content: left;
}
.logo-align-center {
    justify-content: center;
}
.topbar img {
    width: 100%;
    display: block;
    max-width: 140px;
}
a.website_tab.active {
    display: flex;
    align-items: center;
    background: #f2f2f23b;
}
a.website_tab {
    padding: 10px 20px;
   position: relative;
}
.website_tab img.logo_second {
    filter: grayscale(1);
}
  a.website_tab::before {
    position: absolute;
    content: "";
    width: 100%;
    height: 0px;
    background: #ffcf36;
    transition: .2s all linear;
    top: 0;
    left: 0;
    opacity: 0;
}
a.website_tab.active::before {
    opacity: 1;
    height: 4px;
}
</style>

<div class="top-bar color-{{ section.settings.color_scheme }}">
  <div class="page-width topbar-wrapper">
  {% if section.settings.logo_first != blank or section.settings.logo_second != blank %}
    <div class="topbar logo-align-{{ section.settings.logo-align }}">
      {% if section.settings.logo_first != blank %}
        <a href="{{ section.settings.logo_first_link }}" class="aeroled_logo website_tab active"  aria-label="aeroled_logo">
          <img src="{{ section.settings.logo_first | img_url: 'master'}}" alt="" width="" height="" class="logo_first" aria-label="aeroled_logo"  loading="eager">
        </a>
      {% endif %}
      {% if section.settings.logo_second != blank %}
        <a href="{{ section.settings.logo_second_link }}" class="wat_logo website_tab"  aria-label="wat_logo">
          <img
            src="{{ section.settings.logo_second | img_url: 'master'}}"
            alt=""
            width=""
            height=""
            class="logo_second"
            aria-label="wat_logo"
             loading="eager"
          >
        </a>
      {% endif %}
    </div>
  {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Top Bar",
  "class": "top-bar",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Schema",
      "default": "scheme-4"
    },
    {
      "type": "select",
      "id": "logo-align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Logo Alignment"
    },
    {
      "type": "image_picker",
      "id": "logo_first",
      "label": "First Logo"
    },
    {
      "type": "url",
      "id": "logo_first_link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "logo_second",
      "label": "Second Logo"
    },
    {
      "type": "url",
      "id": "logo_second_link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Top Bar"
    }
  ]
}
{% endschema %}
