{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="main-owner-registration section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="rte inline-richtext h1">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="block-content">
      {% for block in section.blocks %}
        <div class="wp-block-column">
          <h2 class="wp-block-heading">{{ block.settings.heading }}</h2>

          {{ block.settings.content }}

          <div class="wp-block-buttons">
            {% if block.settings.button_label != blank %}
              <div class="wp-block-button">
                <a
                  class="wp-block-button__link button btn-custom  button--primary"
                  href="{{ block.settings.url }}"
                  target="_blank"
                  rel="noreferrer noopener"
                >
                 <span>{{- block.settings.button_label -}}</span> 
                  <span class="icon-plus">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="icon icon-plus" viewBox="0 0 10 10">
                      <path fill="currentColor" fill-rule="evenodd" d="M1 4.51a.5.5 0 0 0 0 1h3.5l.01 3.5a.5.5 0 0 0 1-.01V5.5l3.5-.01a.5.5 0 0 0-.01-1H5.5L5.49.99a.5.5 0 0 0-1 .01v3.5l-3.5.01z" clip-rule="evenodd"></path>
                    </svg>
                  </span>
                </a>
              </div>
            {% endif %}
            {% if block.settings.button_label_second != blank %}
              <div class="wp-block-button">
                <a
                  class="wp-block-button__link button btn-custom  button--primary"
                  href="{{ block.settings.url_second }}"
                  target="_blank"
                  rel="noreferrer noopener"
                >
                 <span>{{- block.settings.button_label_second -}}</span> 
                  <span class="icon-plus">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="icon icon-plus" viewBox="0 0 10 10">
                      <path fill="currentColor" fill-rule="evenodd" d="M1 4.51a.5.5 0 0 0 0 1h3.5l.01 3.5a.5.5 0 0 0 1-.01V5.5l3.5-.01a.5.5 0 0 0-.01-1H5.5L5.49.99a.5.5 0 0 0-1 .01v3.5l-3.5.01z" clip-rule="evenodd"></path>
                    </svg>
                  </span>
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name":"Owner Registration",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
  ],
  "blocks": [
  {
    "type": "column",
    "name": "Column",
    "limit": 4,
    "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Button Url"
      },
      {
        "type": "text",
        "id": "button_label_second",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "url_second",
        "label": "Button Url"
      }
    ]
  },
  ],
  "presets": [
    {
      "name": "Owner Registration"
    }
  ]
}
{% endschema %}
