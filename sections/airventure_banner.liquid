{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .airventure_page-width {
    max-width: 1300px;
    margin: 0 auto;
  } 
  .airventure_inner_section {
    background: #000;
  }
  .airventure_inner_section img {
    width: 100%;
    display: block;
  }
  .airventure_inner_section a img {
    transition: transform .5s ease;
  }
  .airventure_inner_section a img:hover {
    transform: scale(1.2);
  }
{%- endstyle -%}

{% if section.settings.image != blank %}
<div class="airventure_page-width">
  <div class="section-{{ section.id }}-padding airventure_inner_section">
    <a href="{{ section.settings.img_url }}">
      <img src="{{ section.settings.image | img_url: 'master'}}" alt="" width="" height="">
    </a>
  </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Airventure Banner",
    "settings": [
      {
        "type":"image_picker",
        "id":"image",
        "label":"Image"
      },
      {
        "type":"url",
        "id":"img_url",
        "label":"Url"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Airventure Banner"
      }
    ]
  }
{% endschema %}